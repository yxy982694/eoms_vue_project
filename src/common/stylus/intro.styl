// 为6个模块添加圆角和背景色
.page-container
  // display: flex
  // flex-direction: column
  // justify-content: space-between
  height: 100%
  overflow-y: auto
  overflow-x: hidden
  /* IE 浏览器 */
  /*三角箭头的颜色*/
  // scrollbar-arrow-color: #fff
  /*滚动条滑块按钮的颜色*/
  // scrollbar-face-color: #0099dd
  /*滚动条整体颜色*/
  // scrollbar-highlight-color: #0099dd
  /*滚动条阴影*/
  // scrollbar-shadow-color: #0099dd
  /*滚动条轨道颜色*/
